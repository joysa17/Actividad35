<%= link_to "Vende aqui", new_product_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Image</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.image %></td>
        <td><%= product.description %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Comprar', purchases_path(user_id: current_user.id, product_id: product.id), method: :post %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

